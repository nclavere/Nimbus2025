<UserControl x:Class="Nimbus2025Wpf.Views.UcAeroports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nimbus2025Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding Filtre, UpdateSourceTrigger=PropertyChanged}" ToolTip="Rechercher ..." />

        <ListBox Grid.Row="1" ItemsSource="{Binding Aeroports}" Margin="0 20 0 0" 
                 IsSynchronizedWithCurrentItem="True" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/aeroport.jpg" Height="40" />
                        <TextBlock Text="{Binding Code}" Margin="10 0 0 0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Name}" Margin="10 0 0 0" VerticalAlignment="Center" />

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="2" Text="{Binding SelectedAeroportDetails}" Margin="0 20 0 0" />

    </Grid>
</UserControl>
