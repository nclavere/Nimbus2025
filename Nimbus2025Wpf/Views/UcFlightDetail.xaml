<UserControl x:Class="Nimbus2025Wpf.Views.UcFlightDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nimbus2025Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Compagnie" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Flight.CompagnyName}" Margin="0,5"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5"
                  SelectedItem="{Binding Company}" 
                  ItemsSource="{Binding Companies}" DisplayMemberPath="Name" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Départ" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,5"
            SelectedItem="{Binding AirportFrom}" 
            ItemsSource="{Binding Airports}"  />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Arrivée" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,5"
            SelectedItem="{Binding AirportTo}" 
            ItemsSource="{Binding Airports}" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Date de départ" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding Flight.Departure}" Margin="0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Date d'arrivée" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding Flight.Arrival}" Margin="0,5"/>

        <Button Grid.Row="5" Grid.Column="1" Content="Enregistrer" HorizontalAlignment="Right" Width="120" Margin="0,10"
                Command="{Binding CommandEnregistrer}"/>
    </Grid>
</UserControl>
