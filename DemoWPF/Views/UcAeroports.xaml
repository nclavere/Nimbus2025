<UserControl x:Class="DemoWPF.Views.UcAeroports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <ListBox Name="lstb" Margin="20" MouseDoubleClick="lstb_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/aeroport.jpg" Height="40" />
                        <TextBlock Text="{Binding Code}" Margin="10 0 0 0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Name}" Margin="10 0 0 0" VerticalAlignment="Center" />
                        
                    </StackPanel>                    
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        
    </Grid>
</UserControl>
